# Remember Me MCP Environment Configuration
# Generated by Ansible

# Database Configuration
DATABASE_URL=postgres://{{ vault_postgres_user }}:{{ vault_postgres_password }}@{{ postgres_host }}:{{ postgres_port }}/{{ vault_postgres_db }}?sslmode=disable
REMEMBER_ME_DATABASE_HOST={{ postgres_host }}
REMEMBER_ME_DATABASE_PORT={{ postgres_port }}
REMEMBER_ME_DATABASE_USER={{ vault_postgres_user }}
REMEMBER_ME_DATABASE_PASSWORD={{ vault_postgres_password }}
REMEMBER_ME_DATABASE_DBNAME={{ vault_postgres_db }}
REMEMBER_ME_DATABASE_SSLMODE=disable

# OpenAI Configuration
OPENAI_API_KEY={{ vault_openai_api_key }}

# Server Configuration
HTTP_PORT={{ remember_me_port }}
LOG_LEVEL={{ log_level }}
DEBUG={{ enable_debug | default(false) | lower }}
ENVIRONMENT={{ environment }}

# JWT Configuration
JWT_SECRET={{ vault_jwt_secret }}

# API Configuration
API_BASE_URL=https://{{ domain_name }}

# Memory Service Configuration
MEMORY_MAX_MEMORIES=10000
MEMORY_SIMILARITY_THRESHOLD=0.7